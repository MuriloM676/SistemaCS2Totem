generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Paciente {
  id             Int      @id @default(autoincrement())
  nome           String   @db.VarChar(255)
  dataNascimento String   @db.VarChar(10) @map("data_nascimento")
  criadoEm       DateTime @default(now()) @map("criado_em")
  
  senhas    Senha[]

  @@map("pacientes")
}

model Senha {
  id         Int      @id @default(autoincrement())
  numero     String   @unique @db.VarChar(10)
  status     String   @default("aguardando") @db.VarChar(20) // aguardando, chamando, atendido
  criadoEm   DateTime @default(now()) @map("criado_em")
  chamadoEm  DateTime? @map("chamado_em")
  
  pacienteId Int?     @map("paciente_id")
  paciente   Paciente? @relation(fields: [pacienteId], references: [id], onDelete: SetNull)

  @@map("senhas")
  @@index([status])
  @@index([pacienteId])
}

model Usuario {
  id       Int      @id @default(autoincrement())
  username String   @unique @db.VarChar(50)
  senha    String   @db.VarChar(255)
  nome     String   @db.VarChar(255)
  criadoEm DateTime @default(now()) @map("criado_em")

  @@map("usuarios")
}
